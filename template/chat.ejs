<% layout('layout/page') -%>
<% block('title', "Чат") -%>

<script src="/vendor/bower_components/socket.io-client/dist/socket.io.js"></script>
<link rel="stylesheet" href="/css/position.css"/>


  
<aside>
  <p>Online:</p>
  <ul id="online"></ul>
</aside>

<article>
  <div id="room">
    <ul></ul>

    <form>
      <input class="form-control" autocomplete="off" placeholder="Сообщение...">
    </form>
  </div>
</article>

<script>

  var input = $('#room input');
  var ul = $('#room ul');
  var form = $('#room form');
  var online = $('#online');

  var socket = io();

  socket
      .on('game invite', function(from) {
        alert(from);
      })
      .on('online list', function(onlineListNames) {
        onlineListNames.forEach(function(username) {
          $('<li>').text(username).appendTo(online);
        });
      })
      .on('message #chat', function(username, message) {
        printMessage(username + ": " + message);
      })
      .on('leave', function(username) {
        printStatus(username + " вышел из чата");
      })
      .on('join', function(username, onlineListNames) {
        printStatus(username + " вошёл в чат");

        online.empty()
        onlineListNames.forEach(function(username) {
          $('<li>').text(username).appendTo(online);
        });
      })
      .on('connect', function() {
        printStatus("соединение установлено");
        form.on('submit', sendMessage);
        input.prop('disabled', false);
      })
      .on('disconnect', function() {
        printStatus("соединение потеряно");
        form.off('submit', sendMessage);
        input.prop('disabled', true);
        this.emit('error');
      })
      .on('logout', function() {
        location.href = "/";
      })
      .on('error', function(reason) {
        if (reason == "handshake unauthorized") {
          printStatus("вы вышли из сайта");
        } else {
          setTimeout(function() {
            socket.socket.connect();
          }, 500);
        }
      })


  function sendMessage() {
    var text = input.val();

    socket.emit('message #chat', text, function() {
      printMessage("я: " + text);
    });

    input.val('');
    return false;
  }

  function printStatus(status) {
    $('<li>').append($('<i>').text(status)).appendTo(ul);
  }

  function printMessage(text) {
    $('<li>').text(text).appendTo(ul);
  }

</script>